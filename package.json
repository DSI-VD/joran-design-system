{
  "name": "@dsivd/joran",
  "version": "0.0.2",
  "description": "Joran Design System",
  "license": "MIT",
  "author": "Etat de Vaud - DGNSI",
  "main": "fractal.config.js",
  "scripts": {
    "beautify": "run-p beautify:*",
    "beautify:all": "prettier --write .",
    "beautify:scripts": "xo --space --fix",
    "beautify:styles": "stylelint src/**/*.css --fix",
    "prebuild": "npm run clean",
    "build": "run-s build:*",
    "build:fonts": "copyfiles node_modules/@fontsource/inter/files/inter-latin-ext-*.woff2 public/assets/fonts -f",
    "build:fractal": "npx fractal build",
    "build:scripts": "copyfiles node_modules/alpinejs/dist/alpine.js public/assets/scripts -f",
    "build:styles": "postcss src/assets/styles/style.css -o public/assets/styles/style.css --config postcss.config.js",
    "build:vectors": "copyfiles src/assets/vectors/**/*.* public/assets/vectors/ -f",
    "clean": "rimraf build public",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build -r https://github.com/DSI-VD/joran-design-system.git",
    "lint": "run-s lint:*",
    "lint:all": "prettier --check .",
    "lint:scripts": "xo --space",
    "lint:styles": "stylelint src/**/*.css",
    "prepublishOnly": "npm run build",
    "start": "npm run watch",
    "test": "npm run lint",
    "watch": "npm run build && run-p watch:*",
    "watch:fractal": "npx fractal start --sync",
    "watch:scripts": "chokidar \"src/assets/**/*.js\" -c \"npm run build:scripts\" --initial",
    "watch:styles": "chokidar \"src/**/*.css\" -c \"npm run build:styles\" --initial",
    "watch:vectors": "chokidar \"src/assets/vectors/**/*.*\" -c \"npm run build:vectors\" --initial"
  },
  "dependencies": {
    "@fontsource/inter": "^4.2.0"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.5.3",
    "@frctl/nunjucks": "^2.0.7",
    "@tailwindcss/typography": "^0.4.0",
    "alpinejs": "^2.8.0",
    "autoprefixer": "^10.2.4",
    "chokidar-cli": "^2.1.0",
    "copyfiles": "^2.4.1",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.1",
    "postcss-easy-import": "^3.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "^2.0.3",
    "xo": "^0.37.1"
  }
}
