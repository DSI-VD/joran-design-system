{
  "name": "@dsivd/joran",
  "version": "0.0.26",
  "description": "Joran Design System",
  "license": "MIT",
  "author": "Etat de Vaud - DGNSI",
  "main": "fractal.config.js",
  "scripts": {
    "beautify": "run-p beautify:*",
    "beautify:all": "prettier --write .",
    "beautify:scripts": "xo --space --fix",
    "beautify:styles": "stylelint src/**/*.css --fix",
    "prebuild": "npm run clean",
    "build": "run-s build:*",
    "build:fonts": "copyfiles node_modules/@fontsource/roboto/files/roboto-latin-?00-*.woff2 public/assets/fonts -f",
    "build:scripts": "copyfiles node_modules/flickity/dist/flickity.pkgd.min.js public/assets/scripts -f && copyfiles src/**/*.js public/assets/scripts -f --exclude src/**/*.config.js",
    "build:styles": "postcss src/assets/styles/style.css -o public/assets/styles/style.css --config postcss.config.js",
    "build:vectors": "svgo -f src/assets/vectors/ -o public/assets/vectors/",
    "build:images": "imagemin src/assets/images/* --out-dir=public/assets/images/",
    "build:fractal": "npx fractal build",
    "clean": "rimraf build public",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build -r https://github.com/DSI-VD/joran-design-system.git",
    "lint": "run-s lint:*",
    "lint:all": "prettier --check .",
    "lint:scripts": "xo --space",
    "lint:styles": "stylelint src/**/*.css",
    "prepublishOnly": "npm run build",
    "start": "npm run watch",
    "test": "npm run lint",
    "watch": "npm run build && run-p watch:*",
    "watch:fractal": "npx fractal start --sync",
    "watch:scripts": "chokidar \"src/**/*.js\" -c \"npm run build:scripts\" --initial",
    "watch:styles": "chokidar \"src/**/*.css\" -c \"npm run build:styles\" --initial",
    "watch:vectors": "chokidar \"src/assets/vectors/**/*.*\" -c \"npm run build:vectors\" --initial"
  },
  "devDependencies": {
    "@fontsource/roboto": "^4.2.2",
    "@frctl/fractal": "^1.5.4",
    "@frctl/nunjucks": "^2.0.8",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/line-clamp": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "chokidar-cli": "^2.1.0",
    "copyfiles": "^2.4.1",
    "faker": "^5.4.0",
    "flickity": "^2.2.2",
    "gh-pages": "^3.1.0",
    "imagemin-cli": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend-rule": "^3.0.0",
    "postcss-nested": "^5.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "svgo": "^2.2.2",
    "tailwindcss": "^2.0.3",
    "xo": "^0.38.2"
  }
}
