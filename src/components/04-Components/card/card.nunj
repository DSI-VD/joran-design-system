<article class="c-card o-stack">
    {% if image %}
    <figure>
        <img src="{{ image.src}}" alt="{{ image.alt }}"/>
    </figure>
    {% endif %}
    <h3 class="c-card__heading">{{ title }}</h3>
    <div class="c-card__content">
        {{ content }}
    </div>
    {% if button %}
    <div>
        {% render '@button' %}
    </div>
    {% endif %}
</article>
